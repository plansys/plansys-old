var chalk = require('chalk');


module.exports = exports = {
	log : function(str){
		console.log(str+' ');
	},
	note : function(str){
		console.log(chalk.black.bgWhite(' '+str+' '));
	},
	progress : function(str){
		console.log(chalk.white.bold.bgBlue(' '+str+' '));
	},
	error : function(str){
		console.log(chalk.white.bold.bgRed(' '+str+' '));
	},
	warn : function(str){
		console.log(chalk.black.bgYellow(' '+str+' '));
	},
	ok : function(str){
		console.log(chalk.black.bgGreen(' '+str+' '));
	},
	clear : function(num){
		if(!num) num = 1;
		for(var i=1;i<num;i++){
			process.stdout.clearLine();
			process.stdout.cursorTo(0);
			process.stdout.moveCursor(0,-1);
			process.stdout.clearLine();
		}
	}
}
